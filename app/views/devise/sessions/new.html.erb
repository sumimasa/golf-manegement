<div class="user-wrapper">
  <h1 class="sign-up">ログイン</h1>
  <div class="form">
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", autofocus: true%>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default"%>
  </div>

  <%# if devise_mapping.rememberable? %>
    <%#div class="field">
      <%= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%#/div>
  <%# end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"action"%>
  </div>
<% end %>
    <div class="button">
      <%= render "devise/shared/links" %>
      <div class="sns-wrapper">
        <div class="facebook-wrapper">
            <%= link_to user_facebook_omniauth_authorize_path,class:"btn facebook", method: :post do%>
              <%= fa_icon "facebook-square " %>facebookでログイン      
            <% end %>
        </div>
        <div class="google-wrapper">
          <%= link_to user_google_oauth2_omniauth_authorize_path,class:"btn google", method: :post do%>
            <%= fa_icon "google" %>Googleでログイン
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

