<div class="user-wrapper">
  
  <div class="form">
    <h1 class="sign-up">ログイン⛳️</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        
        <%= f.email_field :email, placeholder:"メールアドレス",class:"input-default", autofocus: true%>
      </div>

      <div class="form-group">
        
        <%= f.password_field :password, placeholder:"パスワード",class:"input-default"%>
      </div>

      

      <div class="actions">
        <%= f.submit "ログイン" ,class:"action"%>
      </div>
    <% end %>
    <div class="button">
      
      <div class="sns-wrapper">
        <div class="facebook-wrapper">
            <%= link_to user_facebook_omniauth_authorize_path,class:"btn facebook", method: :post do%>
              <%= fa_icon "facebook-square " %>facebookでログイン      
            <% end %>
        </div>
        <div class="google-wrapper">
          <%= link_to user_google_oauth2_omniauth_authorize_path,class:"btn google", method: :post do%>
            <%= fa_icon "google" %>Googleでログイン
          <% end %>
        </div>
      </div>
      <%= link_to "新規登録", new_registration_path(resource_name),class:"btn sign" %>
    </div>
  </div>
</div>

