<div class="user-wrapper">
  
  <div class="form">
    <h1 class="sign-up">ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="text email">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default", autofocus: true%>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="text password">パスワード</label>
        </div>
        <%= f.password_field :password, class:"input-default"%>
      </div>

      <%# if devise_mapping.rememberable? %>
        <%#div class="field">
          <%= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        <%#/div>
      <%# end %>

      <div class="actions">
        <%= f.submit "ログイン" ,class:"action"%>
      </div>
    <% end %>
    <div class="button">
      
      <div class="sns-wrapper">
        <div class="facebook-wrapper">
            <%= link_to user_facebook_omniauth_authorize_path,class:"btn facebook", method: :post do%>
              <%= fa_icon "facebook-square " %>facebookでログイン      
            <% end %>
        </div>
        <div class="google-wrapper">
          <%= link_to user_google_oauth2_omniauth_authorize_path,class:"btn google", method: :post do%>
            <%= fa_icon "google" %>Googleでログイン
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

