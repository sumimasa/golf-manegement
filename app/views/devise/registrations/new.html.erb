<div class="user-wrapper">
  
  
  <div class="form">
    <h1 class="sign-up">新規登録</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    

  <div class="form-group">
    
    <%= f.text_field :nickname, placeholder:"ニックネーム",class:"input-default", autofocus: true%>
  </div>
  <div class="form-group">
    
    <%= f.email_field :email, placeholder:"メールアドレス",class:"input-default"%>
  </div>

  <%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
 <% else %>
  <div class="form-group">
    
    <%= f.password_field :password,placeholder:"パスワード：6文字以上",class:"input-default", autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    
    <%= f.password_field :password_confirmation, placeholder:"パスワード：再入力",class:"input-default",autocomplete: "new-password" %>
    
  </div>
 <% end %>

  <div class="actions">
    <%= f.submit "登録" ,class:"action"%>
  </div>
<% end %>

    <div class="button">
      
      <div class="sns-wrapper">
        <div class="facebook-wrapper">
            <%= link_to user_facebook_omniauth_authorize_path,class:"btn facebook", method: :post do%>
              <%= fa_icon "facebook-square " %>facebookで登録       
            <% end %>
        </div>
        <div class="google-wrapper">
          <%= link_to user_google_oauth2_omniauth_authorize_path,class:"btn google", method: :post do%>
            <%= fa_icon "google" %>Googleで登録
          <% end %>
        </div>
      </div>
      <div class="sign-wrapper">
        <%= link_to "ログイン", new_session_path(resource_name),class:"btn sign"%><br />
      </div>
    </div>

  </div>
</div>


